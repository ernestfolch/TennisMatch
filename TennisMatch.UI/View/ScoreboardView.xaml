        <Label Content="2" HorizontalAlignment="Left" Margin="425,40,0,0" VerticalAlignment="Top"/>
        <Label Content="3" HorizontalAlignment="Left" Margin="450,40,0,0" VerticalAlignment="Top"/>
        <Label Content="4" HorizontalAlignment="Left" Margin="475,40,0,0" VerticalAlignment="Top"/>
        <Label Content="5" HorizontalAlignment="Left" Margin="500,40,0,0" VerticalAlignment="Top"/>

        <Label HorizontalAlignment="Left" Height="30" Margin="50,70,0,0" Content="0" VerticalAlignment="Top" Width="50"/>
        <Label HorizontalAlignment="Left" Height="30" Margin="50,95,0,0" Content="0" VerticalAlignment="Top" Width="50"/>

        <Label HorizontalAlignment="Left" Height="30" Margin="150,70,0,0" Content="Player1 Name" VerticalAlignment="Top" Width="120"/>
        <Label HorizontalAlignment="Left" Height="30" Margin="150,95,0,0" Content="Player2 Name" VerticalAlignment="Top" Width="120"/>

        <Label HorizontalAlignment="Left" Height="30" Margin="400,70,0,0" Content="0" VerticalAlignment="Top" Width="30"/>
