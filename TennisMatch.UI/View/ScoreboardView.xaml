        <Label HorizontalAlignment="Left" Height="30" Margin="450,95,0,0" Content="0" VerticalAlignment="Top" Width="30"/>
        <Label HorizontalAlignment="Left" Height="30" Margin="475,70,0,0" Content="0" VerticalAlignment="Top" Width="30"/>
        <Label HorizontalAlignment="Left" Height="30" Margin="475,95,0,0" Content="0" VerticalAlignment="Top" Width="30"/>
        <Label HorizontalAlignment="Left" Height="30" Margin="500,70,0,0" Content="0" VerticalAlignment="Top" Width="30"/>
